[alias]
    au = add -u .
    co = checkout
    cm = commit
    dh = diff HEAD
    ds = diff --staged
    st = status
    pom = push origin master
    update-submodules = submodule update --init --depth 100 --recursive
    upgrade-submodules = submodule update --init --depth 100 --remote

[color]
    ui = auto

[color "grep"]
    match = cyan bold
    selected = blue
    context = normal
    filename = magenta
    linenumber = green
    separator = yellow
    function = blue

