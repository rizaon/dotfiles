[push]
    default = simple

[include]
    path = ~/.gitconfig_local

[core]
    excludesfile = ~/.gitignore_global

[stash]
    showPatch = true

[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f

[log]
    decorate = auto

[pull]
    ff = only
