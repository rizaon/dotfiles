#!/bin/sh


if [ $# == 3 ]; then
    find . -iname "*$1*$2*$3*" | \
	grep -v "\.svn" | \
	grep -i --color "$1.*$2.*$3"
    exit
fi

if [ $# == 2 ]; then
    find . -iname "*$1*$2*" | \
	grep -v "\.svn" | \
	grep -i --color "$1.*$2"
    exit
fi

find . -iname "*$1*" | \
grep -v "\.svn" | \
grep -i --color "$1"



